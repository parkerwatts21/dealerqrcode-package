{
    "manifest_version": 3,
    "name": "dealerqrcode",
    "version": "4.0",
    "description": "A Chrome extension to generate dealership QR codes",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "chrome-extension.png",
        "48": "chrome-extension.png",
        "128": "chrome-extension.png"
      }
    },
    "permissions": ["activeTab", "scripting", "downloads", "tabs"],
    "host_permissions": ["<all_urls>"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  